<div class="contact-container">
  <div class="contact-card">
    <div class="contact-card-header">
      <h1>お問い合わせ</h1>
    </div>
    
    <div class="contact-card-body">
      <%= form_with(model: @contact, 
          url: contact_us_path, 
          local: true, 
          class: 'contact-form',
          data: { turbo: false }) do |f| %>
        
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        
        <% if @contact.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, '名前', class: 'form-label required' %>
          <%= f.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label required' %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :subject, '件名', class: 'form-label required' %>
          <%= f.text_field :subject, class: 'form-control', required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :message, 'お問い合わせ内容', class: 'form-label required' %>
          <%= f.text_area :message, class: 'form-control', rows: 6, required: true %>
        </div>

        <div class="contact-actions">
          <%= f.submit '送信する', class: 'contact-btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
