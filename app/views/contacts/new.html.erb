<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center mb-4">お問い合わせ</h1>

          <%= form_with(model: @contact, 
              url: contact_us_path, 
              local: true, 
              class: 'needs-validation',
              data: { turbo: false }) do |f| %>
            
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            
            <% if @contact.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @contact.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :name, '名前', class: 'form-label required' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :email, 'メールアドレス', class: 'form-label required' %>
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :subject, '件名', class: 'form-label required' %>
              <%= f.text_field :subject, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :message, 'お問い合わせ内容', class: 'form-label required' %>
              <%= f.text_area :message, class: 'form-control', rows: 6, required: true %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit '送信する', class: 'btn btn-primary px-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
