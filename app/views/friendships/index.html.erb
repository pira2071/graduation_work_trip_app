<div class="container mt-4">
  <h2>すべてのフレンド - <%= @friends.count %></h2>
  <div class="list-group">
    <% @friends.each do |friend| %>
      <div class="list-group-item">
        <%= friend.name %>
      </div>
    <% end %>
  </div>

  <h2 class="mt-4">保留中</h2>
  <div class="list-group">
    <% if @pending_requests.present? %>
      <% @pending_requests.each do |request| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <%= request.requester.name %>
          <div>
            <%= button_to '承認', accept_friendship_path(request), method: :patch, class: 'btn btn-success btn-sm me-2' %>
            <%= button_to '拒否', reject_friendship_path(request), method: :patch, class: 'btn btn-danger btn-sm' %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="list-group-item">
        保留中のフレンド申請はありません
      </div>
    <% end %>
  </div>
</div>
