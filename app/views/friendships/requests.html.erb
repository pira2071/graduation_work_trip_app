<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">フレンドに追加</h2>
        </div>
        <div class="card-body">
          <%= form_with url: friendships_path, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :name, 'Discordユーザー名でフレンドを追加できます。', class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'ユーザー名を入力' %>
            </div>
            <%= f.submit 'フレンド申請を送信', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
