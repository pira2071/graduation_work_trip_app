<div class="packing-container">
  <div class="container mb-2">
    <div class="packing-breadcrumb">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">パックリスト</li>
        </ol>
      </nav>
    </div>
  </div>
  
  <div class="packing-card">
    <div class="packing-card-header">
      <h1>パックリスト</h1>
    </div>
    
    <div class="packing-card-body">
      <% if @packing_lists.empty? %>
        <div class="packing-empty">
          <p>作成されたリストはありません。</p>
          <%= link_to "新規作成", new_packing_list_path, class: "packing-btn btn-primary" %>
        </div>
      <% else %>
        <div class="packing-list">
          <% @packing_lists.each do |list| %>
            <div class="packing-list-item">
              <%= link_to list.name, packing_list_path(list), class: "item-link" %>
              <%= button_to packing_list_path(list), 
                    method: :delete,
                    class: "delete-btn",
                    data: { turbo_confirm: "このリストを削除してもよろしいですか？" } do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="packing-actions">
          <%= link_to "新規作成", new_packing_list_path, class: "packing-btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
