<div class="container mt-4">
  <h1 class="mb-4">持物リスト一覧</h1>

  <% if @packing_lists.empty? %>
    <div class="text-center">
      <p class="mb-4">作成されたリストはありません。</p>
      <%= link_to "新規作成", new_packing_list_path, class: "btn btn-primary" %>
    </div>
  <% else %>
    <div class="list-group mb-4">
      <% @packing_lists.each do |list| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to list.name, packing_list_path(list), class: "flex-grow-1 text-decoration-none text-dark" %>
          <%= button_to packing_list_path(list), 
                method: :delete,
                class: "btn btn-link text-danger p-0 ms-3",
                data: { turbo_confirm: "このリストを削除してもよろしいですか？" } do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="text-center">
      <%= link_to "新規作成", new_packing_list_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
