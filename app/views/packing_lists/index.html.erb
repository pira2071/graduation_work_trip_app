<div class="container mt-4">
  <h1 class="mb-4">持物リスト一覧</h1>

  <% if @packing_lists.empty? %>
    <div class="text-center">
      <p class="mb-4">作成されたリストはありません。</p>
      <%= link_to "新規作成", new_packing_list_path, class: "btn btn-primary" %>
    </div>
  <% else %>
    <div class="list-group mb-4">
      <% @packing_lists.each do |list| %>
        <%= link_to list.name, packing_list_path(list), class: "list-group-item list-group-item-action" %>
      <% end %>
    </div>
    
    <div class="text-center">
      <%= link_to "新規作成", new_packing_list_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
