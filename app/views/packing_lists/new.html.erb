<div class="packing-container" data-controller="packing-list-form">
  <div class="packing-card">
    <div class="packing-card-header">
      <h1>リスト登録</h1>
    </div>
    
    <div class="packing-card-body">
      <%= form_with(model: @packing_list, local: true, class: "packing-form") do |f| %>
        <div class="mb-4">
          <%= f.label :name, "リスト名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "例：沖縄旅行" %>
        </div>

        <div class="mb-4">
          <div class="d-flex align-items-center mb-3">
            <label class="form-label mb-0">リスト内容</label>
            <button type="button" class="btn add-item-btn ms-2" id="add-item-btn" data-action="click->packing-list-form#addItem">
              <i class="bi bi-plus-circle"></i> 項目を追加
            </button>
          </div>

          <div id="items-container" data-packing-list-form-target="itemsContainer">
            <% 10.times do |i| %>
              <div class="mb-2">
                <%= f.text_field "items[]", name: "packing_list[items][#{i}]", class: "form-control", placeholder: "#{i+1}. 持ち物を入力" %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="packing-actions">
          <%= link_to "戻る", packing_lists_path, class: "packing-btn btn-secondary" %>
          <%= f.submit "登録", class: "packing-btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
