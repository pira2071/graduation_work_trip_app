<div class="container mt-4" data-controller="packing-list-check">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">持物チェック</h1>
    <button type="button" 
            class="btn btn-secondary" 
            data-action="click->packing-list-check#clearAll">
      クリア
    </button>
  </div>

  <div class="list-group mb-4">
    <% @items.each do |item| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <span><%= item.name %></span>
        <div class="form-check">
          <%= check_box_tag "item_#{item.id}", 
                          1, 
                          item.checked, 
                          class: "form-check-input",
                          data: {
                            action: "change->packing-list-check#toggleCheck",
                            item_id: item.id
                          } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "戻る", packing_lists_path, class: "btn btn-secondary" %>
  </div>
</div>
