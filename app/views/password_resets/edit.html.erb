<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center mb-4">パスワード再設定</h1>

          <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
            <div class="mb-3">
              <label class="form-label">メールアドレス</label>
              <p class="form-control-static"><%= @user.email %></p>
            </div>

            <div class="mb-3">
              <%= f.label :password, '新しいパスワード', class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, 'パスワード（確認）', class: 'form-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="text-center">
              <%= f.submit '更新', class: 'btn btn-primary px-5' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
