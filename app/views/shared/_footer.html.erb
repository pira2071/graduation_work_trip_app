<footer id="footer" class="footer-bottom">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <div class="footer-link-item">
          <%= link_to terms_of_service_path, class: "footer-link" do %>
            <i class="bi bi-file-text me-1"></i>利用規約
          <% end %>
        </div>
