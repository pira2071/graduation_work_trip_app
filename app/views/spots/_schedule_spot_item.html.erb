<div class="spot-item card mb-2" data-schedule-id="<%= spot.id %>" data-category="<%= spot.category %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <span class="spot-number badge bg-<%= category_badge_class(spot.category) %> me-2" data-spot-number></span>
        <div class="spot-name">
          <%= spot.name %>
          <span class="badge <%= category_badge_class(spot.category) %>">
            <%= spot.category %>
          </span>
        </div>
      </div>
      <button type="button"
              class="btn btn-outline-danger btn-sm"
              data-action="spots-registration#deleteFromList"
              data-spots-registration-spot-id-param="<%= spot.id %>">
        <i class="bi bi-trash"></i> 削除
      </button>
    </div>
  </div>
</div>
