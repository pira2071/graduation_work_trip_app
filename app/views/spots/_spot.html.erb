<div class="spot-item" data-spot-id="<%= spot.id %>">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
      <span class="badge bg-<%= category_badge_class(spot.category) %> me-2"><%= spot.order_number %></span>
      <span class="flex-grow-1"><%= spot.name %></span>
    </div>
    <button type="button" 
            class="btn btn-outline-danger btn-sm"
            data-action="spots-registration#deleteFromList">
      <i class="bi bi-trash"></i> 削除
    </button>
  </div>
</div>
