<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="mb-3">
        <%= link_to 'プラン一覧に戻る', travels_path %>
      </div>

      <h1 class="mb-4">プラン編集</h1>

      <%= form_with model: @travel, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-3">
          <%= f.label :title, 'タイトル', class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :start_date, '開始日', class: 'form-label' %>
          <%= f.date_field :start_date, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :end_date, '終了日', class: 'form-label' %>
          <%= f.date_field :end_date, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :member_names, 'メンバー', class: 'form-label' %>
          <%= f.text_field :member_names, 
              value: @travel.travel_members.where(role: :guest).pluck(:name).join('、'),
              class: 'form-control', 
              placeholder: '例：山田太郎、佐藤花子、鈴木一郎' %>
          <div class="form-text">名前を「、」で区切って入力してください</div>
        </div>

        <div class="text-center">
          <%= f.submit '更新', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>