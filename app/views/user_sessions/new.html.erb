<div class="auth-container">
  <div class="auth-card">
    <div class="auth-card-header">
      <h1>ログイン</h1>
    </div>
    
    <div class="auth-card-body">
      <%= form_with url: login_path, local: true, class: "auth-form" do |f| %>
        <% if flash[:danger].present? %>
          <div class="alert alert-danger">
            <%= flash[:danger] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'example@example.com' %>
        </div>

        <div class="mb-4">
          <%= f.label :password, 'パスワード', class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="d-grid mb-3">
          <%= f.submit 'ログイン', class: 'auth-btn btn-primary' %>
        </div>
      <% end %>

      <div class="d-grid mb-4">
        <%= button_to auth_path(provider: 'google_oauth2'), method: :post, class: "btn-google", data: { turbo: false } do %>
          <i class="fab fa-google"></i> Googleでログイン
        <% end %>
      </div>

      <div class="auth-links">
        <p class="text-muted mb-2">アカウントをお持ちでない方は</p>
        <%= link_to '新規登録はこちら', new_user_path, class: 'btn-link' %>
        <div class="mt-2">
          <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'btn-link' %>
        </div>
      </div>
    </div>
  </div>
</div>
