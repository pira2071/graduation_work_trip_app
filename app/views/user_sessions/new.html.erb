<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1 class="text-center mb-4">ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <% if flash[:danger].present? %>
          <div class="alert alert-danger">
            <%= flash[:danger] %>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'example@example.com' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= f.submit 'ログイン', class: 'btn btn-primary btn-lg px-5' %>
        </div>
      <% end %>

      <div class='text-center mt-4'>
        <p class="text-muted">アカウントをお持ちでない方は</p>
        <%= link_to '新規登録はこちら', new_user_path, class: 'btn btn-link' %>
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'btn btn-link' %>
      </div>
    </div>
  </div>
</div>
