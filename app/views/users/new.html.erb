<div class="auth-container">
  <div class="auth-card">
    <div class="auth-card-header">
      <h1>新規ユーザー登録</h1>
    </div>
    
    <div class="auth-card-body">
      <%= form_with model: @user, local: true, class: "auth-form" do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, 'お名前', class: 'form-label required' %>
          <%= f.text_field :name, class: 'form-control', placeholder: '例：山田 太郎' %>
        </div>

        <div class="mb-3">
          <%= f.label :email, 'メールアドレス', class: 'form-label required' %>
          <%= f.email_field :email, class: 'form-control', placeholder: '例：example@example.com' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, 'パスワード', class: 'form-label required' %>
          <%= f.password_field :password, class: 'form-control' %>
          <div class="form-text">パスワードは6文字以上で入力してください</div>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation, 'パスワード（確認）', class: 'form-label required' %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="d-grid mb-4">
          <%= f.submit '登録', class: 'auth-btn btn-primary' %>
        </div>
      <% end %>

      <div class="auth-links">
        <p class="text-muted mb-1">Googleアカウント・本アプリのアカウントを</p>
        <p class="text-muted mb-2">お持ちの方は <%= link_to 'ログインページへ', login_path, class: 'btn-link' %></p>
      </div>
    </div>
  </div>
</div>
